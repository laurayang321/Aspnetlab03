@model IEnumerable<MvcNorthwind.Models.Northwind.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName) <!--Display name for Category-->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <!--we don't want pic-->
        <!--  
        <th>
            @Html.DisplayNameFor(model => model.Picture) 
        </th>
        -->
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName) <!--Don't give the name of col, but give me the value/content of col -->
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <!--
            <td>
            @Html.DisplayFor(modelItem => item.Picture)
        </td>        
        -->
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
